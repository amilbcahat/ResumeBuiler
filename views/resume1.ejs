<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>resume1</title>
    <script
      src="https://kit.fontawesome.com/80e022771c.js"
      crossorigin="anonymous"
    ></script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <style>
      .education,
      .company-position {
        display: flex;
        justify-content: space-between;
      }
      .about-heading,
      .education-heading,
      .experiemce-heading,
      .user-name,
      .contact-me-heading {
        font-weight: bold;
        font-size: 22px;
      }
      .left {
        border: 2px solid #000;
        padding-top: 50px;
        margin-right: 50px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="row py-5">
        <div class="col-md-3 text-center left">
          <!-- Image starts here  -->
          <% if(resume.photo || resume.photo != "" || resume.photo === null){ %>
          <img
            src="/img/<%- resume.photo%>"
            width="150px"
            height=""
            alt="user-image"
            style="border-radius: 10px"
          />
          <% } %>
          <!-- Name starts here  -->
          <% if(resume.name || resume.name != "" || resume.name === null){ %>

          <div class="user-name py-1"><%- resume.name%></div>
          <% } %>
          <div class="user-designation"><%- resume.designation%></div>
          <div class="contact-me py-4">
            <%if(resume.email != "" && resume.phone != "" && resume.linkedin
            !=""){%>
            <p class="contact-me-heading">Contact me</p>
            <%}%> <% if(resume.email || resume.email != "" || resume.email===
            null){ %>

            <!-- Email Start -->
            <div>
              <span><i class="fa-solid fa-envelope"></i></span>
              <span> <%- resume.email%></span>
            </div>
            <% } %>

            <!-- Location Start -->

            <% if(resume.location || resume.location != ""){ %>

            <div>
              <span><i class="fa-solid fa-location-dot"></i></span
              ><span><%- resume.location%></span>
            </div>
            <% } %>
            <!-- Linked in start -->

            <% if(resume.linkedin || resume.linkedin != ""){ %>

            <div>
              <span><i class="fa-brands fa-linkedin"></i></span
              ><span><%- resume.linkedin%></span>
            </div>

            <% } %>

            <!-- About Starts -->

            <% if(resume.linkedin || resume.linkedin != ""){ %>

            <div class="experiemce-heading py-4">About</div>

            <div class="user-education">
              <div class="college-name">
                <span><%- resume.about%></span>
              </div>
            </div>
            <% } %>
          </div>
        </div>
        <div class="col-md-8">
          <!-- Objective Starts -->
          <% if(resume.objective || resume.objective != ""){ %>

          <div class="about-heading">Objective</div>
          <div class="about-desc py-4"><%- resume.objective%></div>

          <%}%>

          <!-- Project starts -->
          <!-- <%if(resume.project1 != null && resume.project2 !=null)%> -->
          <% if(resume.project1 != "" || resume.project2 != "" ){ %>
          <div class="education-heading py-4">Projects</div>
          <%}%>
          <div class="user-education">
            <div class="college-name">
              <ul>
                <% if(resume.project1 || resume.project1 != ""){ %>

                <li><%- resume.project1%></li>
                <%}%> <% if(resume.project2 || resume.project2 != ""){ %>

                <li><%- resume.project2%>></li>
                <%}%>
              </ul>
            </div>
          </div>
          <!-- < %}%> -->

          <!-- Education Experience Starts Here  -->
          <!-- First Education Details -->
          <% if(resume.edudetails || resume.edudetails != ""){ %>

          <div class="user-education">
            <div class="education">
              <div><%- resume.edudetails%></div>
              <div><span><%- resume.edutimeperiod%></span></div>
            </div>
          </div>
          <% }%>
          <!-- Second Education Details -->

          <% if(resume.edudetails1 || resume.edudetails1 != ""){ %>

          <div class="user-education">
            <div class="education">
              <div><%- resume.edudetails1%></div>
              <div><span><%- resume.edutimeperiod1%></span></div>
            </div>
          </div>
          <%}%>
          <!-- Achievement Starts -->

          <% if(resume.achievements || resume.achievements != ""){ %>

          <div class="experiemce-heading py-4">Achievements</div>

          <div class="user-education">
            <div class="college-name">
              <ul>
                <li><%- resume.achievements%></li>
              </ul>
            </div>
          </div>
          <%}%>
          <!-- Skills Start -->
          <% if(resume.skill || resume.skill != ""){ %>

          <div class="experiemce-heading py-4">Skills</div>

          <div class="user-education">
            <div class="college-name">
              <ul>
                <li><%- resume.skill%></li>
              </ul>
            </div>
          </div>
          <%}%>
          <!-- Hobbies Start -->
          <% if(resume.hobbies || resume.hobbies != ""){ %>

          <div class="experiemce-heading py-4">Hobbies</div>

          <div class="user-education">
            <div class="college-name">
              <ul>
                <li><%- resume.hobbies%></li>
              </ul>
            </div>
          </div>
          <%}%>
        </div>
      </div>
    </div>
  </body>
</html>
