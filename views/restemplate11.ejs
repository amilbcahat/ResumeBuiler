      </ul> -->
      <!-- <p class="head">Extracurriculars</p>
      <ul>
        <li>Recycling Club</li>
        <li>Gardening Club</li>
        <li>Book Club</li>
      </ul> -->
      <% if(resume.hobbies || resume.hobbies != ""){ %>

      <p class="head">Hobbies</p>
      
      <ul>
        <li><%- resume.hobbies%></li>
      </ul>
      <% } %>

      <% if(resume.project || resume.project != ""){ %>

      <p class="head">Project</p>
      <ul>
        <li><%- resume.project%></li>
      </ul>
      <% } %>
      <% if(resume.regards || resume.regards != ""){ %>

<p class="head">Regards : </p><ul><li><%- resume.regards%>s</li></ul></p>
<% } %>
