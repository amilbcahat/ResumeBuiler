<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script
      src="https://kit.fontawesome.com/80e022771c.js"
      crossorigin="anonymous"
    ></script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <style>
      .home {
        background: linear-gradient(264.41deg, #9d2aff 7.62%, #d91cff 98.55%);
        border-radius: 20px;
        width: 112px;
        height: 40px;
        margin: 0 auto;
      }
      .home a {
        text-decoration: none;
        font-weight: 500;
        font-size: 14px;
        line-height: 17px;
        color: #ffffff;
        position: relative;
        left: 36px;
        top: 5px;
      }
      .content {
        background: #e7e7e7;
        padding: 25px 45px;
      }
      .contactus {
        display: flex;
      }
      .eduaction {
        display: flex;
      }
      input {
        border: none;
        border-radius: 5px;
        outline: none;
      }
      .headings {
        font-weight: 600;
        font-size: 18px;
        line-height: 17px;
        color: #606060;
        padding-top: 5px;
        padding-bottom: 5px;
      }
      .template1heading {
        font-weight: 600;
        font-size: 24px;
        line-height: 29px;
        color: #000000;
      }
      #about {
        word-break: break-all;
      }
      .createbtn {
        margin: 0 auto;
        width: 128px;
        height: 37px;
        background: linear-gradient(262.04deg, #d91cff -6.58%, #9d2aff 106.03%);
        border-radius: 5px;
      }
      .createbtn a {
        text-decoration: none;
        font-weight: 500;
        font-size: 14px;
        line-height: 17px;
        color: #ffffff;
        position: relative;
        left: 18px;
        top: 5px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="home mt-3"><a href="#">Home</a></div>
      <div class="text-center template1heading py-3">Template 1</div>
      <div class="content">
        <form class="form--resume">
          <div class="headings">Name</div>
          <input type="text" id="name" class="p-2 my-2" />

          <div class="headings">Title</div>
          <input type="text" id="title" class="p-2 my-2" />

          <div class="headings">Designation</div>
          <input type="text" id="designation" class="p-2 my-2" />

          <div class="headings">Location</div>
          <input type="text" id="location" class="p-2 my-2" />

          <div class="headings">Objective</div>
          <input type="text" id="objective" class="p-2 my-2" />

          <div class="headings">About</div>
          <input
            type="text"
            id="about"
            class="p-2 my-2"
            style="width: 500px; height: 100px"
          />

          <div class="headings">Contact Us</div>
          <div class="contactus">
            <input
              type="text"
              id="email"
              placeholder="Email"
              class="p-2 my-2"
              style="margin-right: 15px"
            />
            <input
              type="text"
              id="phone"
              placeholder="phone"
              class="p-2 my-2"
              style="margin-right: 15px"
            />
            <input
              type="text"
              id="linkedin"
              placeholder="Linkedin"
              class="p-2 my-2"
              style="margin-right: 15px"
            />
          </div>

          <div class="headings">Educational Details</div>
          <div class="eduaction">
            <input
              type="text"
              id="edudetails"
              placeholder="Title"
              class="p-2 my-2"
              style="margin-right: 15px"
            />
            <input
              type="text"
              id="edutimeperiod"
              placeholder="Timeperiod"
              class="p-2 my-2"
              style="margin-right: 15px"
            />
          </div>
          <div class="eduaction">
            <input
              type="text"
              id="edudetails1"
              placeholder="Title"
              class="p-2 my-2"
              style="margin-right: 15px"
            />
            <input
              type="text"
              id="edutimeperiod1"
              placeholder="Timeperiod"
              class="p-2 my-2"
              style="margin-right: 15px"
            />
          </div>

          <div class="headings">Achievements</div>
          <div class="eduaction">
            <input
              type="text"
              id="achievements"
              placeholder="Your Achivements"
              class="p-2 my-2"
              style="margin-right: 15px"
            />
          </div>
          <div class="headings">Skills</div>

          <div class="eduaction">
            <input
              type="text"
              id="skill"
              placeholder="Mention your Skills"
              class="p-2 my-2"
              style="margin-right: 15px"
            />
          </div>
          <div class="headings">Projects</div>

          <div class="eduaction">
            <input
              type="text"
              id="project1"
              placeholder="Your Project"
              class="p-2 my-2"
              style="margin-right: 15px"
            />

            <input
              type="text"
              id="project2"
              placeholder="Your Project"
              class="p-2 my-2"
              style="margin-right: 15px"
            />
          </div>

          <div class="headings">Hobbies</div>

          <div class="eduaction">
            <input
              type="text"
              id="hobbies"
              placeholder="Hobbies"
              class="p-2 my-2"
              style="margin-right: 15px"
            />
          </div>
          <div>
            <span>Upload your image </span
            ><span><input type="file" id="photo" name="" /></span>
          </div>
          <div>
            <center>
              <button class="createbtn btn--edit">Create Resume</button>
            </center>
          </div>
          <div class="right" data-id="<%- resume.id%>"></div>
        </form>
      </div>
    </div>
    <script>
      document.getElementById("name").value = "<%- resume.name%>";
      document.getElementById("email").value = "<%- resume.email%>";
      document.getElementById("objective").value = "<%- resume.objective%>";
      document.getElementById("phone").value = "<%- resume.phone%>";
      document.getElementById("about").value = "<%- resume.about%>";
      document.getElementById("edudetails").value = "<%- resume.edudetails%>";
      document.getElementById("achievements").value =
        "<%- resume.achievements%>";
      document.getElementById("project1").value = "<%- resume.project1%>";
      document.getElementById("project2").value = "<%- resume.project2%>";
      document.getElementById("edudetails1").value = "<%- resume.edudetails1%>";
      document.getElementById("edutimeperiod1").value =
        "<%- resume.edutimeperiod1%>";
      document.getElementById("edutimeperiod").value =
        "<%- resume.edutimeperiod%>";
      document.getElementById("linkedin").value = "<%- resume.linkedin%>";
      document.getElementById("skill").value = "<%- resume.skill%>";
      document.getElementById("hobbies").value = "<%- resume.hobbies%>";
      document.getElementById("designation").value = "<%- resume.designation%>";
      document.getElementById("location").value = "<%- resume.location%>";
      //   document.getElementById("photo").files[0];
    </script>
    <script src="http://127.0.0.1:3000/js/bundle.js"></script>
  </body>
</html>
